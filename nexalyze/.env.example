# =============================================================================
# NEXALYZE - Environment Configuration Template
# =============================================================================
# Copy this file to .env and configure your settings
# Required variables are marked with [REQUIRED]
# =============================================================================

# =============================================================================
# AI CONFIGURATION [REQUIRED]
# =============================================================================

# Google Gemini API key - Get from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini model to use (gemini-1.5-flash, gemini-1.5-pro, gemini-pro)
GEMINI_MODEL=gemini-1.5-flash

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL settings
POSTGRES_USER=nexalyze
POSTGRES_PASSWORD=nexalyze_secure_123
POSTGRES_DB=nexalyze
POSTGRES_PORT=5432

# Redis settings
REDIS_PORT=6379
REDIS_MAX_MEMORY=256mb

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (true/false) - set to false in production
DEBUG=true

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# SERVICE PORTS
# =============================================================================

# Backend API port
BACKEND_PORT=8000

# Frontend port
FRONTEND_PORT=3000

# =============================================================================
# OPTIONAL API KEYS (Enhanced Features)
# =============================================================================

# SerpAPI for web search - Get from https://serpapi.com
SERP_API_KEY=

# NewsAPI for news - Get from https://newsapi.org
NEWS_API_KEY=

# GitHub token for enhanced GitHub data - Create at https://github.com/settings/tokens
GITHUB_TOKEN=

# =============================================================================
# RATE LIMITING
# =============================================================================

# Enable/disable rate limiting
RATE_LIMIT_ENABLED=true

# Maximum requests per period
RATE_LIMIT_REQUESTS=100

# Rate limit period in seconds
RATE_LIMIT_PERIOD=60

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable LangGraph agent for multi-step reasoning
ENABLE_LANGGRAPH=true

# Enable CrewAI for collaborative AI agents
ENABLE_CREWAI=true

# =============================================================================
# WORKER SETTINGS (Production)
# =============================================================================

# Number of backend workers (set higher in production)
WORKERS=4
